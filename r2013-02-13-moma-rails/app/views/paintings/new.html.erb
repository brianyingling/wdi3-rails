<div class="new_form">
  <%= form_for @painting do |f| %>
    <%= f.label :artist_id %><br/>
    <%= f.select :artist_id, Artist.all.map {|artist| [artist.name, artist.id]},{:include_blank=>true} %>
    <%= link_to "Add", new_artist_path, :class=>'btn' %>
    <hr style='border:1px dotted lightblue;margin:15px 0;'/>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :year %>
    <%= f.text_field :year %>

    <%= f.label :medium %>
    <%= f.text_field :medium %>

    <%= f.label :style %>
    <%= f.text_field :style %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.submit %>
  <% end %>
</div>