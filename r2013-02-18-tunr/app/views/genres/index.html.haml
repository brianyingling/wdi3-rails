.twelve.columns
  %table
    %tr
      %td= link_to "New Genre", new_genre_path, :class=>'button' if @auth.present? && @auth.is_admin
    %tr
      %td Genre Name
      %td Options
    - @genres.each do |genre|
      %tr
        %td= genre.name
        %td= link_to('Edit', edit_genre_path(genre.id), :method=>'get', :class=>'button radius') if @auth.present? && @auth.is_admin
