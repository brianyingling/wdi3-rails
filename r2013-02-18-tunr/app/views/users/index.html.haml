#users
  %table
    %tr
      %td Name
      %td Image
      %td Balance
      %td Delete?
    - @users.each do |user|
      %tr
        %td
          %span{:class=>user.is_admin ? "alert label radius" : "success label radius"}=user.name
        %td
          %img{:src=>user.image}
        %td= number_to_currency(user.balance)
        %td= button_to("Delete", user_path(user.id), :method=>'delete', :class=>'button radius alert tiny') if user != @auth

