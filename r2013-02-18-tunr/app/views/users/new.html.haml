
  .four.columns
    - if @user.present? && @user.errors.any?
      %ol
        - @user.errors.full_messages.each do |msg|
          %li
            %span.label.alert.radius= msg

    = form_for @user do |f|
      = f.text_field :name, :autofocus=>true
      = f.label :name
      = f.text_field :image
      = f.label :image
      = f.text_field :balance
      = f.label :balance
      = f.password_field :password
      = f.label :password
      = f.password_field :password_confirmation
      = f.label :password_confirmation
      = f.submit nil, :class=>'button_radius'
  .eight.columns

