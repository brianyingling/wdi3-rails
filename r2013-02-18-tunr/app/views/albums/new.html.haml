.five.columns
= render(:partial=>'shared/errors', :locals=>{:object=>@album})
= form_for @album do |f|
  = f.label         :name
  = f.text_field    :name
  = f.label         :image
  = f.text_field    :image
  = f.submit
  %table
  - Song.order(:name).each do |song|
    %tr
      %td= check_box_tag('album[song_ids][]',song.id,song.in?(@album.songs.to_a))
      %td= link_to(song.name, song)

.seven.columns

