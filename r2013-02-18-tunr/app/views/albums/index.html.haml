.twelve.columns
  .table_div
    %table
      %tr
        %td= link_to "New Album", new_album_path, :class=>'button radius tiny' if @auth.present? && @auth.is_admin
      %tr
        %td Name
        %td Artist
        %td Album Cover
        - if @auth.present? && @auth.is_admin
          %td Options
      - @albums.each do |album|
        %tr
          %td= link_to album.name, album
          %td= link_to album.artists.first.name, artist_path(album.artists.first.id) if !album.artists.first.nil?
          %td= link_to(image_tag(album.image, :class=>'album_covers'),album)
          %td
            = link_to("Edit", edit_album_path(album.id), :class=>'button radius tiny') if @auth.present? && @auth.is_admin
            = link_to("Delete", @delete, :method=>'delete',:class=>'button radius tiny',:confirm=>'Are you sure?') if @auth.present? && @auth.is_admin
