.row
  .two.columns
  .ten.columns
    = link_to "New Album", new_album_path, :class=>'button radius tiny', :style=>'margin:10px;' if @auth.present? && @auth.is_admin
.row
  .two.columns
  .ten.columns
    %h3= "Albums Available"
    - @albums.each do |album|
      .albums= link_to(image_tag(album.image),album_path(album))