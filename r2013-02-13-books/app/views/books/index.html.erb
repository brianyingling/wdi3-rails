<h2>Books</h2>
<table>
  <tr style="background-color:lightblue;">
    <td>Title</td>
    <td>Subtitle</td>
    <td>ISBN</td>
    <td>Publisher</td>
    <td>Pubdate</td>
    <td>Format</td>
  </tr>
<% @books.each do |book| %>
  <tr style="background-color:<%= cycle('tan','gray') %>;">
  <td><%= link_to book.title, book_path(book.id) %></td><td><%= book.subtitle %></td><td><%= book.isbn %></td><td><%= book.publisher %></td><td><%= book.pubdate %></td><td><%= book.format %></td>

  </tr>
<% end %>
</table>